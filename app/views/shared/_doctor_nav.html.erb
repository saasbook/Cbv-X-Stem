  <div class="container">
        <div class="collapse jumbotron jumbotron-fluid" id="nav-pivotal-printboard">
            <div class="nav-pivotal-interface">
              <span class="left-pivotal">
                <div class="left-pivotal-font"> Current User: </div>
                <div class="left-pivotal-font"> <%= current_user && (current_user.first_name + " " + current_user.last_name) %> </div>
              </span>
              <span class="mid-pivotal1" id="mid-p1" style="background-color: #4473C5;">
