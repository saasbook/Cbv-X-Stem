<div class = "search_table">
<!-- <p id="notice"><%= notice %></p> -->
<div>
<h1 style="text-align: center">Booked Meetings</h1>

</div>



<table class = "table table-striped col-md-12">
   <thead>
    <tr>
      <th>Start time</th>
      <th>End time</th>
      <th>Doctor</th>
      <th>Contact info</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @booked.each do |meeting| %>
      <tr>
        <td><%= meeting.start_time.strftime("%m-%d-%Y %l:%M %P") %></td>
        <td><%= meeting.end_time.strftime("%m-%d-%Y %l:%M %P") %></td>
        <td><%= UserHolder.find(meeting.user_holder_id).first_name + ' ' + UserHolder.find(meeting.user_holder_id).last_name %> </td>
        <td><%= UserHolder.find(meeting.user_holder_id).email %></td>
        <td><%= meeting.status %></td>
        <td><%= link_to 'Details', show_patient_appointment_path(meeting.id) %></td>
              </tr>
    <% end %>
  </tbody>
</table>

<br>

<br>
<br>
<br>
<br>
<h1 style="text-align: center">Available Meetings</h1>

</div>



<table class = "table table-striped col-md-12">
   <thead>
    <tr>
      <th>Start time</th>
      <th>End time</th>
      <th>Doctor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td><%= meeting.start_time.strftime("%m-%d-%Y %l:%M %P") %></td>
        <td><%= meeting.end_time.strftime("%m-%d-%Y %l:%M %P") %></td>
        <td><%= UserHolder.find(meeting.user_holder_id).first_name + ' ' + UserHolder.find(meeting.user_holder_id).last_name %> </td>
        <td><%= link_to 'Book', book_meeting_path(current_user.id, meeting.id), method: :get%></td>
      </tr>
    <% end %>
  </tbody>
</table>
